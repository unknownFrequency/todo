<MainPageLayout>: # Root Widget name
    todo_text_input: todo_text
    todo_protected_input: protected_id
    todo_deadline_input: deadline

    id: main_page
    spacing: 40
    padding: 20
    orientation: "vertical"

    BoxLayout:
        size_hint: (1,4)

        Label:
            text: "TODO or not TODO..."
            color: (0,0,0,0)
            font_size: 32

    BoxLayout:
        size_hint: (1,40)
        spacing: 40
        padding: 40

        TextInput:
            id: todo_text
            hint_text: "What todo..."
            multiline: True
            font_size: 32

    BoxLayout:
        orientation: "vertical"
        padding: 40

        BoxLayout:
            orientation: "horizontal"

            CalendarButton:
                id: deadline
                on_release: root.show_date_picker()

            ProtectedButton:
                id: protected_id
                text: root.protected_button_text
                background_color: root.protected_button_background_color
                on_release: app.root.ids.protected_id.text = root.toggle_protected()
                on_release: app.root.ids.protected_id.background_color = root.toggle_protected_button_background_color()
                font_size: 32

    BoxLayout:
        orientation: "horizontal"

        MDLabel:
            text: "Priority"
            font_size: 36

        MDSlider:
            id: priority_id
            min: 1
            max: 10
            value: 1
            step: 1

        MDLabel:
            text: str(priority_id.value)

    BoxLayout:
        orientation: "horizontal"
        size_hint_x: .25

        Switch:
            id: priority_switch_id
            on_active: root.priority_switch(self, self.active)

    BoxLayout:
        spacing: dp(40)
        orientation: 'vertical'
        size_hint_x: None
        pos_hint: {'center_x': 0.5, 'center_y': 0.5}
        BoxLayout:
            orientation: 'vertical'

            MDRaisedButton:
                text: "Timepicker"
                size_hint: None, None
                size: 6 * dp(48), dp(48)
                pos_hint: {'center_x': 0.5, 'center_y': 0.5}
                on_release: root.show_time_picker()

            MDLabel:
                id: time_picker_label
                theme_text_color: 'Primary'
                size_hint: None, None
                size: dp(48)*3, dp(48)
                pos_hint: {'center_x': 0.5, 'center_y': 0.5}


    BoxLayout:
        MDRaisedButton:
            background_color: (0,1,0,0)
            font_size: 32
            size_hint: None, None
            size: '5000000000px', '50dp'
            pos_hint: {'center_x': 0.5, 'center_y': 0.5}
            text: "Save"
            on_release: root.save_task()

