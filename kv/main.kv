<MainPageLayout>: # Root Widget name
    todo_text_input: todo_text
    todo_protected_input: protected_id
    todo_deadline_input: deadline

    id: main_page
    spacing: 10
    padding: 10
    orientation: "vertical"

    BoxLayout:
        size_hint: (1,4)

        Label:
            text: "TODO or not TODO..."
            color: (0,0,0,0)
            font_size: 32

    BoxLayout:
        size_hint: (1,4)

        TextInput:
            id: todo_text
            hint_text: "What todo..."
            multiline: True
            font_size: 32

    BoxLayout:
        orientation: "vertical"

        BoxLayout:
            orientation: "horizontal"

        ProtectedButton:
            id: protected_id
            text: root.protected_button_text
            background_color: root.protected_button_background_color
            on_release: app.root.ids.protected_id.text = root.toggle_protected()
            on_release: app.root.ids.protected_id.background_color = root.toggle_protected_button_background_color()
            font_size: 32

    BoxLayout:
        orientation: "horizontal"
        size_hint_x: .25

        Slider:
            id: priority_id
            min: 1
            max: 10
            value: 0
            step: 1


    BoxLayout:
        orientation: "horizontal"
        size_hint_x: .25

        Label:
            text: str(priority_id.value)

    BoxLayout:
        orientation: "horizontal"
        size_hint_x: .25

        Label:
            text: "On / Off"

    BoxLayout:
        orientation: "horizontal"
        size_hint_x: .25

        Switch:
            id: priority_switch_id
            on_active: root.priority_switch(self, self.active)


    CalendarButton:
        id: deadline
        on_release: root.show_date_picker()

    SaveButton:
        on_release: root.save_task()

