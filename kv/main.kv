<MainPageLayout>: # Root Widget name
    todo_text_input: todo_text
    todo_protected_input: protected_id
    todo_deadline_input: deadline

    id: main_page
    spacing: 10
    padding: 10
    orientation: "vertical"

    BoxLayout:
        orientation: "horizontal"
        size_hint: (1,1)

        TextInput:
            id: todo_text
            hint_text: "What todo..."
            multiline: True
            font_size: 32


    BoxLayout:
        orientation: "vertical"

        BoxLayout:
            orientation: "horizontal"
            text: "Protected"

            Label:
                text: "Protected"
                color: (0,1,0,0)
                font_size: 32

            Switch:
                id: protected_id
                on_active: root.switch_protected(self.active)

    BoxLayout:
        orientation: "horizontal"
        size_hint_x: .25

        Slider:
            id: priority_id
            min: 1
            max: 10
            value: 0
            step: 1


    BoxLayout:
        orientation: "horizontal"
        size_hint_x: .25

        Label:
            text: str(priority_id.value)

    BoxLayout:
        orientation: "horizontal"
        size_hint_x: .25

        Label:
            text: "On / Off"

    BoxLayout:
        orientation: "horizontal"
        size_hint_x: .25

        Switch:
            id: priority_switch_id
            on_active: root.priority_switch(self, self.active)


    CalendarButton:
        id: deadline
        on_release: root.show_date_picker()

    SaveButton:
        on_release: root.save_task()

