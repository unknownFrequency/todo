<GridLayout>:
    todo_text_input: todo_text
    todo_protected_input: protected
    todo_deadline_input: deadline
    id: main_page
    cols: 1
    rows: 44
    spacing: 10
    padding: 10

    TextInput:
        id: todo_text
        hint_text: "What todo..."
        font_size: 32

    BoxLayout:
        orientation: "horizontal"
        Label:
            text: "Protected"
            size_hint_x: None
            size_hint: None, 1
            size: self.texture_size

        CheckBox:
            id: protected
            width: 10
            text: "Protected"
            pos_hint: {'center_x':.1}

    CalendarButton:
        id: deadline
        on_release: root.show_date_picker()

    SaveButton:
        on_release: root.save_task()

